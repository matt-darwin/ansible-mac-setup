Vagrant.configure("2") do |config|

  config.vm.box = "macOS_Catalina"
  config.vm.box_url = "file:///Users/matt.darwin/github/ansible-mac-setup/macOS_Catalina/macOS_Catalina_brew_ansible.box"

  config.vm.boot_timeout = 360
  config.vm.synced_folder ".", "/vagrant", disabled: true
  
  config.vm.define "localhost" do |localhost|
    localhost.vm.provision "file", source: ".", destination: "/tmp/ansible"
    localhost.vm.provision "ansible_local" do |ansible|
      ansible.verbose            = "v"
      ansible.inventory_path     = "/tmp/ansible/hosts"
      ansible.playbook           = "/tmp/ansible/configure-mac.yaml"
      ansible.become             = true
    end
  end

  config.vm.provider "virtualbox" do |vb|
    vb.gui = true
  end

  
end