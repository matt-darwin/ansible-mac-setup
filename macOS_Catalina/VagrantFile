Vagrant.configure("2") do |config|

  config.vm.box = "ramsey/macos-catalina"

  config.vm.boot_timeout = 360
  config.vm.synced_folder ".", "/vagrant", disabled: true
  
  config.vm.define "localhost" do |localhost|
    localhost.vm.provision "file", source: ".", destination: "/tmp/ansible"
    localhost.vm.provision "file", source: "~/xcode-download", destination: "/tmp/xcode-download"
    localhost.vm.provision "shell", path: "./scripts/ansible_install.sh"
    # localhost.vm.provision "ansible_local" do |ansible|
    #   ansible.verbose            = "v"
    #   ansible.inventory_path     = "/tmp/ansible/hosts"
    #   ansible.playbook           = "/tmp/ansible/configure-mac.yaml"
    #   ansible.become             = true
    # end
  end

  config.vm.provider "virtualbox" do |vb|
    vb.gui = true
  end

  
end